<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThongtinUserActivity">

    <ImageView
        android:id="@+id/scr03imageviewuser"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="250dp"
        ></ImageView>
    <TextView
        android:id="@+id/scr03txtvUser"
        android:layout_below="@id/scr03imageviewuser"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        ></TextView>
    <TextView
        android:id="@+id/scr03txtvPass"
        android:layout_below="@id/scr03txtvUser"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        ></TextView>
    <Button
        android:id="@+id/scr03btnDelete"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scr03txtvPass"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></Button>

</RelativeLayout>